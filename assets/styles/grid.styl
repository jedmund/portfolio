@import 'variables.styl'

/*
 * The Grid
 * -------------------------------------------------------------------------- */
col()
  display: inline-block
  vertical-align: top

.col-1-3
  col()
  width: third

.col-2-3
  col()
  width: (third * 2) + (margin)

.col-1-4
  col()
  width: fourth

  +mobile()
    display: block
    width: 100%

.col-3-4
  col()
  width: (fourth * 3) + (margin * 2)

  +mobile()
    display: block
    width: 100%

.col-1-2
  col()
  width: half

  +mobile()
    display: block
    width: 100%

.col-1
  col()
  width: full

before-1-4()
  margin-left: fourth

.after
  margin-right: page-horz-padding

  +mobile()
    margin-right: 0

.left
  float: left

  +mobile()
    float: none

.right
  float: right

  +mobile()
    float: none

.clear
  clear: both