.notice
  align-items: center
  display: flex
  flex-direction: row
  margin-bottom: margin

  +mobile()
    display: block

  img
    border-radius: 100px
    height: 4rem
    margin: 0
    width: 4rem

    +mobile()
      display: block
      margin: 0 auto

  .bubble
    background-color: card-color
    border-radius: corner-radius
    box-sizing: border-box
    display: flex
    height: auto
    margin-right: (unit * 2)
    padding: (unit * 2)
    position: relative
    text-align: center

    +mobile()
      border-radius: mobile-corner-radius
      display: block
      padding: (unit * 6)
      margin-bottom: (unit * 6)

    &:after
      content: ''
      position: absolute
      right: 0
      top: 50%
      width: 0
      height: 0
      border: 10px solid transparent
      border-left-color: card-color
      border-right: 0
      margin-top: -10px
      margin-right: -10px

      +mobile()
        // Reset
        top: auto
        right: auto
        border-left-color: transparent
        border-right: auto
        margin-top: 0
        margin-right: 0

        // Bottom arrow
        bottom: 0
        left: 50%
        border: 20px solid transparent
        border-top-color: card-color
        border-bottom: 0
        margin-left: -20px
        margin-bottom: -20px


    p
      color: text-color-body
      font-size: font-size
      font-weight: font-weight-med
      margin: auto
      text-align: center

      +mobile()
        font-weight: font-weight