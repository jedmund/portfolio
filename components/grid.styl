@import 'variables.scss';

/*
 * The Grid
 * -------------------------------------------------------------------------- */
%col {
  display: inline-block;
  vertical-align: top;
}

.col-1-3 {
  @extend %col;
  width: $third;
}

.col-2-3 {
  @extend %col;
  width: ($third * 2) + ($project-margin);
}

.col-1-4 {
  @extend %col;
  width: $fourth;
}

.col-3-4 {
  @extend %col;
  width: ($fourth * 3) + ($project-margin * 2);
}

.col-1-2 {
  @extend %col;
  width: $half;
}

.col-1 {
  @extend %col;
  width: $full;
}

.after {
  margin-right: $page-horz-padding;
}

.left {
  float: left;
}

.right {
  float: right;
}

.clear {
  clear: both;
}