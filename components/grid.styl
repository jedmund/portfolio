@import 'variables.styl'

/*
 * The Grid
 * -------------------------------------------------------------------------- */
col()
  display: inline-block
  vertical-align: top

.col-1-3
  col()
  width: third

.col-2-3
  col()
  width: (third * 2) + (margin)

.col-1-4
  col()
  width: fourth

.col-3-4 {
  col()
  width: (fourth * 3) + (margin * 2)
}

.col-1-2 {
  col()
  width: half
}

.col-1 {
  col()
  width: full
}

.after {
  margin-right: page-horz-padding
}

.left {
  float: left
}

.right {
  float: right
}

.clear {
  clear: both
}